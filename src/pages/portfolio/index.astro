---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const entries = (await getCollection('portfolio')).sort(
	(a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---
<BaseLayout title="Portfolio">
  <h1 class="mb-4">Portfolio</h1>
  <div class="row">
    {entries.map((entry) => (
      <div class="col-md-6 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title">
                <a href={`/portfolio/${entry.slug}`} class="text-decoration-none text-dark">{entry.data.title}</a>
            </h5>
            <h6 class="card-subtitle mb-2 text-muted">{entry.data.date.toLocaleDateString('de-DE')}</h6>
            
            {entry.data.technologies && (
                <div class="mb-3">
                    {entry.data.technologies.slice(0, 5).map(tech => (
                        <span class="badge bg-secondary me-1">{tech}</span>
                    ))}
                </div>
            )}
            
            <a href={`/portfolio/${entry.slug}`} class="btn btn-primary btn-sm">Details</a>
          </div>
        </div>
      </div>
    ))}
  </div>
</BaseLayout>
