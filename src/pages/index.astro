---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Home">
  <div class="p-5 mb-4 bg-light rounded-3">
    <div class="container-fluid py-5">
      <h1 class="display-5 fw-bold">Willkommen bei andrerinas.de</h1>
      <p class="col-md-8 fs-4">Webdesign, Development und Tutorials.</p>
      <a class="btn btn-primary btn-lg" href="/portfolio" role="button">Zum Portfolio</a>
    </div>
  </div>

  <div class="row align-items-md-stretch">
    <div class="col-md-6">
      <div class="h-100 p-5 text-white bg-dark rounded-3">
        <h2>Neueste Tutorials</h2>
        <p>Lerne neue Techniken und Tipps rund um Webentwicklung.</p>
        <a class="btn btn-outline-light" href="/tutorials" role="button">Ansehen</a>
      </div>
    </div>
    <div class="col-md-6">
      <div class="h-100 p-5 bg-light border rounded-3">
        <h2>Playground</h2>
        <p>Experimente und Demos zu CSS, JS und mehr.</p>
        <a class="btn btn-outline-secondary" href="/playground" role="button">Erkunden</a>
      </div>
    </div>
  </div>
</BaseLayout>