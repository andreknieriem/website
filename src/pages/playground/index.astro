---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const entries = (await getCollection('playground')).sort(
	(a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---
<BaseLayout title="Playground">
  <h1 class="mb-4">Playground</h1>
  <div class="row">
    {entries.map((entry) => (
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title">
                <a href={`/playground/${entry.slug}`} class="text-decoration-none text-dark">{entry.data.title}</a>
            </h5>
            <h6 class="card-subtitle mb-2 text-muted">{entry.data.date.toLocaleDateString('de-DE')}</h6>
            <p class="card-text text-truncate">{entry.data.description}</p>
            <a href={`/playground/${entry.slug}`} class="btn btn-outline-primary btn-sm">Demo ansehen</a>
          </div>
        </div>
      </div>
    ))}
  </div>
</BaseLayout>
